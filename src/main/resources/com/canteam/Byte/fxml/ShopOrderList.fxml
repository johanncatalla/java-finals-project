<AnchorPane maxHeight="844.0" maxWidth="390.0" prefHeight="844.0" prefWidth="390.0" stylesheets="@../styles/OrderList.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.canteam.Byte.Controllers.ShopOrderListController">
   <children>
      <ImageView fitHeight="48.42" fitWidth="390.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/images/Meals/status-bar-black.png" />
