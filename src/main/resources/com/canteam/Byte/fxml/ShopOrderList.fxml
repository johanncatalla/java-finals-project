         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="reloadBtn" layoutX="329.0" layoutY="106.0" mnemonicParsing="false" onAction="#onReload" prefHeight="27.0" prefWidth="25.0" styleClass="reload-icon" />
   </children>
</AnchorPane>
