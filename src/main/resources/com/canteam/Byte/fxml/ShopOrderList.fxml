        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>
      <Label fx:id="shopName" layoutX="57.0" layoutY="56.0" prefHeight="27.0" prefWidth="265.0" styleClass="byte-Rider" stylesheets="@../styles/Meals.css" text="Byte Shop" />
